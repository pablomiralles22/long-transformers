{
  "model_params": {
    "name": "layered",
    "params": {
      "input_embedding_dim": 128,
      "output_embedding_dim": 128,
      "layers": [
        [ "rotary_transformer_encoder_layer", { "d_model": 128, "nhead": 16, "dim_feedforward": 256, "dropout": 0.5, "freq": 1000, "skip_connection": false } ],
        [ "rotary_transformer_encoder_layer", { "d_model": 128, "nhead": 16, "dim_feedforward": 256, "dropout": 0.5, "freq": 1000 } ],
        [ "rotary_transformer_encoder_layer", { "d_model": 128, "nhead": 16, "dim_feedforward": 256, "dropout": 0.4, "freq": 1000, "skip_connection": false } ],
        [ "rotary_transformer_encoder_layer", { "d_model": 128, "nhead": 16, "dim_feedforward": 256, "dropout": 0.4, "freq": 1000 } ]
      ]
    }
  },
  "head_params": {
    "ff_dim": 2048,
    "num_hidden_layers": 1,
    "dropout_p": 0.3,
    "reduction_method": "cls"
  },
  "data_module_params": {
    "name": "text-classification",
    "params": {
      "data_path": "datasets/aclImdb",
      "max_len": 2048,
      "batch_size": 8,
      "pin_memory": true,
      "num_workers": 4
    }
  },
  "optimizer_params": {
    "lr": 0.00001
  },
  "trainer_params": {
    "max_epochs": 20,
    "precision": "16-mixed",
    "enable_checkpointing": true,
    "default_root_dir": "out/text_classification/rotary_transformer",
    "accelerator": "gpu",
    "devices": [ 2 ]
  }
}
