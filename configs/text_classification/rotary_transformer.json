{
  "model_params": {
    "name": "layered",
    "params": {
      "input_embedding_dim": 64,
      "output_embedding_dim": 64,
      "layers": [
        [ "transformer_encoder_layer", 
          { "d_model": 64, "nhead": 4, "dim_feedforward": 128, "dropout": 0.1,
              "attention_params": { "type": "rotary", "freq": 10000  } } ],
        [ "transformer_encoder_layer", 
          { "d_model": 64, "nhead": 4, "dim_feedforward": 128, "dropout": 0.1,
              "attention_params": { "type": "rotary", "freq": 10000  } } ],
        [ "transformer_encoder_layer", 
          { "d_model": 64, "nhead": 4, "dim_feedforward": 128, "dropout": 0.1,
              "attention_params": { "type": "rotary", "freq": 10000  } } ],
        [ "transformer_encoder_layer", 
          { "d_model": 64, "nhead": 4, "dim_feedforward": 128, "dropout": 0.1,
              "attention_params": { "type": "rotary", "freq": 10000  } } ]
      ]
    }
  },
  "head_params": {
    "ff_dim": 512,
    "num_hidden_layers": 0,
    "dropout_p": 0.1,
