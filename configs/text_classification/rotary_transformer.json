{
  "model_params": {
    "name": "layered",
    "params": {
      "input_embedding_dim": 128,
      "output_embedding_dim": 128,
      "layers": [
        [ "positional_embedding", { "mode": "learned", "max_seq_len": 1024, "embed_dim": 128 } ],
        [ "rotary_transformer_encoder_layer", { "d_model": 128, "nhead": 16, "dim_feedforward": 256, "dropout": 0.0, "freq": 10000 } ],
        [ "rotary_transformer_encoder_layer", { "d_model": 128, "nhead": 16, "dim_feedforward": 256, "dropout": 0.0, "freq": 10000 } ],
        [ "rotary_transformer_encoder_layer", { "d_model": 128, "nhead": 16, "dim_feedforward": 256, "dropout": 0.0, "freq": 10000 } ],
        [ "rotary_transformer_encoder_layer", { "d_model": 128, "nhead": 16, "dim_feedforward": 256, "dropout": 0.0, "freq": 10000 } ]
      ]
    }
  },
  "head_params": {
    "ff_dim": 256,
    "num_hidden_layers": 1,
    "dropout_p": 0.1,
    "reduction_method": "cls"
  },
  "data_module_params": {
    "name": "text-classification",
    "params": {
      "data_path": "datasets/aclImdb",
      "max_len": 1024,
      "batch_size": 32,
      "pin_memory": true,
      "num_workers": 4
    }
  },
  "optimizer_params": {
    "lr": 1e-3,
    "weight_decay": 0.01,
    "betas": [ 0.9, 0.98 ]
  },
  "trainer_params": {
    "max_epochs": 40,
    "precision": "16-mixed",
    "enable_checkpointing": true,
    "default_root_dir": "out/text_classification/rotary_transformer",
    "accelerator": "gpu",
    "devices": [ 1 ]
  }
}
