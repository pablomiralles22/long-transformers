{
  "model_params": {
    "name": "layered",
    "params": {
      "input_embedding_dim": 128,
      "output_embedding_dim": 128,
      "layers": [
        [ "positional_embedding", { "mode": "sinusoidal" } ],
        [
          "compressor",
          {
            "d_model": 128,
            "nhead": 16,
            "dim_feedforward": 256,
            "mem_dim": 128,
            "dropout": 0.2,
            "mem_length": 256,
            "num_layers": 4,
            "use_ema": true,
            "ema_dim": 1,
            "ema_direction": "bidirectional",
            "conv_size": 10
          }
        ]
      ]
    }
  },
  "head_params": {
    "ff_dim": 256,
    "num_hidden_layers": 2,
    "dropout_p": 0.2,
    "reduction_method": "cls"
  },
  "data_module_params": {
    "name": "text-classification",
    "params": {
      "data_path": "datasets/aclImdb",
      "max_len": 4096,
      "batch_size": 8,
      "pin_memory": true,
      "num_workers": 4
    }
  },
  "optimizer_params": {
    "lr": 1e-4,
    "betas": [ 0.9, 0.99 ],
    "weight_decay": 0.05
  },
  "trainer_params": {
    "max_epochs": 60,
    "precision": "bf16-mixed",
    "gradient_clip_val": 1.0,
    "enable_checkpointing": true,
    "default_root_dir": "out/text_classification/compressor",
    "accelerator": "gpu",
    "devices": [ 2 ]
  },
  "fit_params": {}
}
