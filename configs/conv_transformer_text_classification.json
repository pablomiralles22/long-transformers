{
    "model": "conv-transformer",
    "model_params": {
        "conv_layers_params": [
            {
                "conv_params": {
                    "in_channels": 32,
                    "out_channels": 128,
                    "kernel_size": 5,
                    "padding": "same"
                },
                "dropout_params": {
                    "p": 0.1
                }
            }
        ],
        "transformer_params": {
            "num_layers": 2,
            "layer_params": {
                "d_model": 128,
                "nhead": 4,
                "dim_feedforward": 128,
                "batch_first": true,
                "dropout": 0.1
            }
        }
    },
    "train_params": {
        "batch_size": 64,
        "epochs": 50,
        "lr": 0.001,
        "weight_decay": 0.01,
        "max_len": 2048
    },
    "model_file_name": "out/models/conv_transformer_text_classification.pt",
    "log_file_name": "out/logs/conv_transformer_text_classification.log",
    "task": "text-classification",
    "dataset_root_dir": "datasets/aclImdb"
}