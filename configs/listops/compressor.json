{
  "model_params": {
    "name": "layered",
    "params": {
      "input_embedding_dim": 80,
      "output_embedding_dim": 80,
      "layers": [
        [ "positional_embedding", { "mode": "sinusoidal" } ],
        [ 
          "compressor",
          {
            "d_model": 80,
            "nhead": 8,
            "dim_feedforward": 160,
            "mem_length": 128,
            "dropout": 0.1,
            "use_ema": true,
            "ema_dim": 4,
            "ema_direction": "forward",
            "conv_size": 2000,
            "num_layers": 6
          }
        ]
      ]
    }
  },
  "head_params": {
    "ff_dim": 160,
    "num_hidden_layers": 1,
    "dropout_p": 0.1,
    "reduction_method": "cls"
  },
  "data_module_params": {
    "name": "listops",
    "params": {
      "data_path": "datasets/lra_release/listops-1000",
      "max_len": 2000,
      "augment": true,
      "batch_size": 64,
      "pin_memory": true,
      "num_workers": 4
    }
  },
  "optimizer_params": {
    "lr": 1e-3,
    "betas": [ 0.9, 0.98 ],
    "weight_decay": 0.01
  },
  "trainer_params": {
    "max_epochs": 40,
    "precision": "bf16-mixed",
    "gradient_clip_val": 1.0,
    "val_check_interval": 0.25,
    "enable_checkpointing": true,
    "default_root_dir": "out/listops/compressor",
    "accelerator": "gpu",
    "devices": [ 2 ]
  },
  "fit_params": {}
}
